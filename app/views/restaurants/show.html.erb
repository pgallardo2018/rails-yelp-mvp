<div class="container">
  <div>
    <h1>Restaurant Details</h1>
  </div>
  <div class="mt-2">
    <h2> <%= @restaurant.name %> </h2>
    <p> <%= @restaurant.address %> </p>
    <p> <%= @restaurant.phone_number %> </p>
  </div>
  <div>
    <h5>Reviews</h5>
    <ul>
      <% @restaurant.reviews.each do |review| %>
        <li>
          <%= review.content %>
        </li>
      <% end %>
    </ul>
  </div>
  <%= link_to 'Back to List', restaurants_path %>
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %>
  <%= link_to "Add Review", new_restaurant_review_path(@restaurant)  %>
  <%= button_to "Delete this restaurant", @restaurant, method: :delete, class: 'btn btn-danger' %>
</div>
