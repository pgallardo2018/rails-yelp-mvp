<div class="container">
  <table class="table table-striped table-hover table-sm">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Category</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= restaurant.name %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.phone_number %></td>
          <td><%= restaurant.category %></td>
          <td><%= link_to 'Show', restaurant , class: 'btn btn-outline-info btn-sm'%></td>
          <td><%= link_to 'Edit', edit_restaurant_path(restaurant) , class: 'btn btn-outline-warning btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>

  </table>
</div>